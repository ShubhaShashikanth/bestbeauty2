<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class= "row-fluid"> 
  	<div class = "span12">
  		     <br />
  		     <br />
		    <h2> Welcome Admin.. Manage the Sephora Products! </h2>
		    <p>Click the button below to add new product:</p>
		    <%= link_to 'New Product', new_product_path, class: 'btn btn-primary btn-lg' %>
		    <br><br />
		    <div class="table-responsive">
				<table class="table table-condensed" >
				  <thead>
				    <tr>
				      <th>Name</th>
				      <th>Description</th>
				      <th>Price(USD)</th>
				      <th>Category</th>
				      <th colspan="3"></th>
				    </tr>
				  </thead>
				
				  <tbody>
				    <% @products.each do |product| %>
				      <tr>
				         <td><%= image_tag product.image.url, size: "160x100"%></td>
				        <td>
				        <dl>
				            <dt><%= product.name %></dt>
							<dd><%= truncate(strip_tags(product.description),
							length: 80) %></dd>
						</dl>
				        </td>
				        <td><%= number_to_currency(product.price) %></td>
				        <td><%= Category.find(product.category_id).name%></td>
				        <td><%= link_to 'Show', product %></td>
				        <td><%= link_to 'Edit', edit_product_path(product) %></td>
				        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
            </div>
         
     </div>
  </div>
 </div>



